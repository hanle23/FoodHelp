<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#352F2F"
    android:backgroundTint="#CBC5C3BF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/facilitator"
        android:layout_width="213dp"
        android:layout_height="82dp"
        android:backgroundTint="#000000"
        android:foregroundTint="@color/white"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        android:freezesText="false"
        android:text="@string/facilitator"
        android:textColorHighlight="#FFFFFF"


        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519" />

    <Button
        android:id="@+id/Shelter"
        android:layout_width="213dp"
        android:layout_height="82dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:foregroundTint="@color/white"
        android:text="@string/shelter"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facilitator" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="282dp"
        android:layout_height="178dp"
        app:srcCompat="@drawable/logo2"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="76dp" />

</androidx.constraintlayout.widget.ConstraintLayout>